pipeline {
  agent any
  stages {
    stage('Install') {
      steps {
        script {
          sh 'source ~/.bashrc && npm i'
          sh 'source ~/.bashrc && npx lerna bootstrap'
        }
      }
    }
    stage('Trigger') {
      steps {
        build job: "test-job", wait: true
      }
    }
  }
}